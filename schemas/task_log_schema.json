{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LUCA Task Log Entry Schema",
  "description": "Schema for daily task log entries in docs/task_log_*.md files",
  "type": "object",
  "properties": {
    "date": {
      "type": "string",
      "pattern": "^## \\d{4}-\\d{2}-\\d{2}$",
      "description": "Date header in format ## YYYY-MM-DD"
    },
    "sections": {
      "type": "object",
      "properties": {
        "changes": {
          "type": "object",
          "properties": {
            "header": {
              "const": "- **Changes**:"
            },
            "items": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^  - .+$"
              },
              "minItems": 1
            }
          },
          "required": ["header", "items"]
        },
        "tests": {
          "type": "object",
          "properties": {
            "header": {
              "const": "- **Tests**:"
            },
            "items": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^  - .+$"
              }
            }
          },
          "required": ["header", "items"]
        },
        "coverage": {
          "type": "object",
          "properties": {
            "header": {
              "const": "- **Coverage**:"
            },
            "value": {
              "type": "string",
              "pattern": "^  - \\d+\\.\\d+%.*$"
            }
          },
          "required": ["header", "value"]
        },
        "issues": {
          "type": "object",
          "properties": {
            "header": {
              "const": "- **Issues**:"
            },
            "items": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^  - .+$"
              }
            }
          },
          "required": ["header", "items"]
        },
        "next": {
          "type": "object",
          "properties": {
            "header": {
              "const": "- **Next**:"
            },
            "items": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^  - .+$"
              }
            }
          },
          "required": ["header", "items"]
        }
      },
      "required": ["changes", "tests", "coverage", "issues", "next"]
    }
  },
  "required": ["date", "sections"]
}